<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="po.samochodgui.HelloController">

    <top>
        <VBox>
            <MenuBar>
                <menus>
                    <Menu text="Plik"/>
                    <Menu text="Edycja"/>
                </menus>
            </MenuBar>

            <ToolBar>
                <ComboBox fx:id="carComboBox" promptText="Samochód:" prefWidth="200"/>
                <Button text="Dodaj nowy" fx:id="addNewBtn"/>
                <Button text="Usuń" fx:id="removeBtn"/>
            </ToolBar>
        </VBox>
    </top>

    <left>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Samochód -->
            <TitledPane text="Samochód" collapsible="true" expanded="true">
                <content>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Model" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="modelField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Nr rejestracyjny" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="regField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Waga" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="weightField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Prędkość" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="speedField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <Button text="Włącz" fx:id="onBtn" onAction="#onOnButton"/>
                            <Button text="Wyłącz" fx:id="offBtn" onAction="#onOffButton"/>
                        </HBox>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- Skrzynia Biegów -->
            <TitledPane text="Skrzynia Biegów" collapsible="true" expanded="false">
                <content>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Nazwa" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="gbNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Cena" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="gbPriceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Waga" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="gbWeightField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Bieg" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="gbGearField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <Button text="Zwiększ bieg" fx:id="GearUpBtn" onAction="#onGearUpBtn"/>
                            <Button text="Zmniejsz bieg" fx:id="GearDownBtn" onAction="#onGearDownBtn"/>
                        </HBox>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- Silnik -->
            <TitledPane text="Silnik" collapsible="true" expanded="false">
                <content>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Nazwa" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="engNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Cena" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="engPriceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Waga" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="engWeightField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Obroty" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="engRPMField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <Button text="Dodaj gazu" fx:id="gasBtn"/>
                            <Button text="Ujmij gazu" fx:id="noGasBtn"/>
                        </HBox>
                    </GridPane>
                </content>
            </TitledPane>

            <!-- Sprzęgło -->
            <TitledPane text="Sprzęgło" collapsible="true" expanded="false">
                <content>
                    <GridPane hgap="10" vgap="5">
                        <Label text="Nazwa" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="clNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <Label text="Cena" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="clPriceField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Waga" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="clWeightField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Stan" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="clStateField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                            <Button text="Naciśnij" fx:id="pressBtn" onAction="#onPressClutch"/>
                            <Button text="Zwolnij" fx:id="releaseBtn" onAction="#onReleaseClutch"/>
                        </HBox>
                    </GridPane>
                </content>
            </TitledPane>

        </VBox>
    </left>

    <center>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Mapa"/>
            <ImageView fx:id="carImageView" fitWidth="50" preserveRatio="true"/>
            <Label text="Car"/>
        </VBox>
    </center>

</BorderPane>
