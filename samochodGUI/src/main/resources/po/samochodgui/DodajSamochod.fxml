<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="po.samochodgui.DodajSamochodController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Dodaj nowy samochód"/>

    <Label text="Model"/>
    <TextField fx:id="modelTextField"/>

    <Label text="Numer rejestracyjny"/>
    <TextField fx:id="registrationTextField"/>

    <Label text="Prędkość maksymalna"/>
    <TextField fx:id="speedTextField"/>

    <Label text="Maksymalne obroty"/>
    <TextField fx:id="rpmTextField"/>

    <Label text="Silnik"/>
    <ComboBox fx:id="engineComboBox" prefWidth="200"/>

    <Label text="Skrzynia biegów"/>
    <ComboBox fx:id="gearboxComboBox" prefWidth="200"/>

    <HBox spacing="10">
        <Button fx:id="confirmButton" text="Zatwierdź" onAction="#onConfirmButton"/>
        <Button fx:id="cancelButton" text="Anuluj" onAction="#onCancelButton"/>
    </HBox>
</VBox>
